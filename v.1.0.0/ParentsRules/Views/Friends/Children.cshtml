@model IEnumerable<ParentsRules.Models.ManageViewModels.ChildrenViewModel>

<h2>Children</h2>
@{ 
    ViewData["Title"] = "Children List";
}
<hr style="display: block;margin-top: 0.5em;margin-bottom: 0.5em;margin-left: auto;margin-right: auto;border-style: inset;border-width: 1px;">
<div class="container">
    <div class="row">
        <div class="col-sm-4"><a asp-action="CreateChild">Add a new Child</a></div>
        <div class="col-sm-4"><a asp-action="Index">View Administrators</a></div>
        
        <div class="col-sm-4"><a asp-controller="Dashboard" asp-action="Index">Return to Dashboard</a></div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Childs Name</th>
            <th>Username</th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)&nbsp;
                @Html.DisplayFor(modelItem => item.MiddleName)&nbsp;
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                <a asp-action="EditChild" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="DeleteChild" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
