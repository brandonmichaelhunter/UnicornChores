@model ParentsRules.Models.PageManager

@{
    string title = string.Format("Deleting file {0} ", Model.BackgroundImageFileName);
    ViewData["Title"] = title;
}

<h4>@title</h4>
<hr />
<div>
    @{
        string imageUrl = string.Format("/images/bgpageimages/{0}", Model.BackgroundImageFileName);
    }
    <img src='@imageUrl' width="75" height="75" alt="test" style="border-radius: 50%;" />
</div>

<h3>Are you sure you want to delete @Model.BackgroundImageFileName?</h3>
@if(ViewBag.NumberOfUsers != 0)
{ 
    <h4>There is @ViewBag.NumberOfUsers user(s) that are currently using this image as their background image.</h4>
}
<div>

    <dl class="dl-horizontal">
        <dt>
           Image Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BackgroundImageName)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
