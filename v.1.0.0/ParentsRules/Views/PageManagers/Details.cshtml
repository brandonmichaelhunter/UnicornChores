@model ParentsRules.Models.PageManager


@{
    string title = string.Format("Viewing {0} file", Model.BackgroundImageFileName);
    ViewData["Title"] = title;
}

<h4>@title</h4>
<hr />
<div>
    @{
        string imageUrl = string.Format("/images/bgpageimages/{0}", Model.BackgroundImageFileName);
    }
    <img src='@imageUrl' width="75" height="75" alt="test" style="border-radius: 50%;" />
</div>
<div>

    <dl class="dl-horizontal">
        <dt>
           Image Name
        </dt>
        <dd>
            <div class="row">
                <div class="col-sm-4">@Html.DisplayFor(model => model.BackgroundImageName)</div>
              
            </div>
        </dd>


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit @Model.BackgroundImageFileName </a> |
    <a asp-action="Index">Back to List</a>
</div>

