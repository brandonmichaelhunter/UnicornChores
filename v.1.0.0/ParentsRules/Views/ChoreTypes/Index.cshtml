@model IEnumerable<ParentsRules.Models.Chroes.ChoreTypes>

@{
    ViewData["Title"] = "Chore Types";
}

<h2>Chore Types</h2>
<hr style="display: block;margin-top: 0.5em;margin-bottom: 0.5em;margin-left: auto;margin-right: auto;border-style: inset;border-width: 1px;">
<div class="container">
    <div class="row">
        <div class="col-sm-4"><a asp-controller="ChoreTypes" asp-action="Create">Create a new Chore</a></div>
        
        <div class="col-sm-4"><a asp-controller="UserRooms" asp-action="Index">Manage Rooms</a></div>
        <div class="col-sm-4"><a asp-controller="Dashboard" asp-action="Index">Return to Dashboard</a></div>

    </div>
</div>
<div class="table-responsive-sm">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Chore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>